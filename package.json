{
  "name": "screen",
  "version": "0.0.0",
  "description": "Sub screen for external devices",
  "main": "dist/electron/main.electron.js",
  "scripts": {
    "ng": "ng",
    "start": "npm-run-all -p ng:serve electron:serve",
    "build": "npm run ng:build && npm run electron:build",
    "ng:serve": "ng serve",
    "ng:build": "ng build",
    "electron:tsc": "tsc --build tsconfig.electron.json",
    "electron:serve": "npm run electron:tsc && electron-forge start -- --serve",
    "electron:build": "npm run electron:tsc && electron-forge make && npm run fix-package-json",
    "tsc": "tsc",
    "package": "electron-forge package",
    "fix-package-json": "node fix-package-json.js && npm install --prefix out/screen-win32-x64/resources/app"
  },
  "author": "Kaiwit Maneewong",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.2.0",
    "@angular/cdk": "^13.2.1",
    "@angular/common": "~13.2.0",
    "@angular/compiler": "~13.2.0",
    "@angular/core": "~13.2.0",
    "@angular/forms": "~13.2.0",
    "@angular/material": "^13.2.1",
    "@angular/platform-browser": "~13.2.0",
    "@angular/platform-browser-dynamic": "~13.2.0",
    "@angular/router": "~13.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-window-state": "^5.0.3",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.1",
    "@angular/cli": "~13.2.1",
    "@angular/compiler-cli": "~13.2.0",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "electron": "^17.0.0",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~4.5.2"
  },
  "config": {
    "forge": "./forge.config.js"
  }
}
